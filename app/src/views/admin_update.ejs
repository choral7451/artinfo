    <title>아트인포 | 관리자</title>
</head>
<body onload="outputScreen()">
    
    <header id="header">
        <div class="desktopHeader">
            <div class="logo">
                <a href="/">ARTINFO</a>
            </div>
            <nav>
                <li><a href="/about">소개</a></li>
                <li><a href="/recruit_art/all">채용정보</a></li>
            </nav>
            <div id="login" class="login">
                <% if( login != null ) { %>
                    <% if( login === "admin" ) { %>
                        <div class="name"><%= login %>&nbsp</div>
                        <a href="/"><i class="fa-solid fa-house-user"></i></i></a>
                        <a class="logout" href="/logout">logout</a>
                    <% } else { %>
                        <div class="name"><%= login %></div>
                        <div class="bar">&nbsp&nbsp&nbsp | &nbsp&nbsp</div>
                        <a class="logout" href="/logout">logout</a>
                    <% } %>    
                <% } else { %>
                    <a class="loginText" href="/login">로그인</a>
                <% } %>
            </div>
        </div>    
    
        <div class="mobileHeader">     
            <% if( login != null ) { %>  
                <nav>
                    <i class="fa-solid fa-bars" onclick="clickMenu()"></i>
                </nav>
                <div class="logo">
                    <a href="/">ARTINFO</a>
                </div>
                <div class="login"><a href="/logout"><i class="fa-solid fa-arrow-right-from-bracket"></i></a></div>
            <% } else { %> 
                <nav>
                    <i class="fa-solid fa-bars" onclick="clickMenu()"></i>
                </nav>
                <div class="logo">
                    <a href="/">ARTINFO</a>
                </div>
                <div class="login"><a href="/login"><i class="fa-regular fa-user"></i></a></div>
            <% } %>            
        </div>
        <div id="mobileMenu" class="mobileMenu"> 
            <a href="/">Home</a>
            <a href="/about">소개</a>
            <a href="/recruit_art/all">채용정보</a>
        </div> 
    </header>
    <section class="section" id="section">
        <div class="title">관리자 수정</div>
        <article class="article">
            <form action="/admin/update_save" class="contentBack" method="post">
                <input type="hidden" name="id" value=<%= data[0].ID %>>
                <div class="top">
                    <div class="typeBack">
                        <p>분류</p>
                        <select name="type">
                            <option>분류</option>
                            <option value="CHOIR">합창단</option>
                            <option value="ORCHESTRA">교향악단</option>
                            <option value="ADMINISTRATION">행정</option>
                            <option value="ETC">기타</option>
                        </select>
                    </div>
                    <div class="cnameBack">
                        <p>단체명</p>
                        <input type="text" name="cname" value=<%= data[0].CNAME %> />
                    </div>
                    <div class="dateBack">
                        <p>게시일</p>
                        <input type="text" name="date" value=<%= data[0].DATE %> >
                    </div>
                </div>
                <div class="center">
                    <div class="titleBack">
                        <p>제목</p>
                        <input type="text" name="title"  value="<%= data[0].TITLE %>" />
                    </div>
                    <div class="urlBack">
                        <p>URL</p>
                        <textarea name="url"><%= data[0].URL %></textarea>
                    </div>
                </div>
                <div class="saveBack">
                    <button>저장</button>
                </div>
            </form>
            <form action="/admin" class="cancelBack"><button>취소</button></form>
        </article>
    </section>
    
    <footer id="footer">   
        <div class="ad_fit1">
            <ins class="kakao_ad_area" style="display:none;" 
            data-ad-unit    = "DAN-PgHV76O2ZNxrnKWW" 
            data-ad-width   = "320" 
            data-ad-height  = "50"></ins> 
        </div>     
        <div class="footerText">문의 : chorales@naver.com</div>       
        <div class="ad_fit2">
            <ins class="kakao_ad_area" style="display:none;" 
            data-ad-unit    = "DAN-27ykCGeamZlU7nSD" 
            data-ad-width   = "320" 
            data-ad-height  = "50"></ins> 
        </div>
    </footer>

    <!-- JS import -->
    <script type="text/javascript" src="//t1.daumcdn.net/kas/static/ba.min.js" async></script>
</body>
</html>