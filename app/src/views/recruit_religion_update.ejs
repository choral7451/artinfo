    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
     
    <!-- 이모티콘  CDN -->
    <script src="https://kit.fontawesome.com/6dca3e9c71.js" crossorigin="anonymous"></script>
   
    <!-- 폰트 설정 CDN -->
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@900&display=swap" rel="stylesheet">
    
    <!-- CSS import -->
    <link rel="stylesheet" href="/css/recruit_religion_write.css">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/footer.css">

    <!-- GOOGLE FONT -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka+One&family=Palette+Mosaic&display=swap" rel="stylesheet">
    
    <!-- favicon -->
    <link rel="shortcut icon" href="/img/favicon.png">

    <title>아트인포 | 채용정보</title>
</head>
<body>    
    <header id="header">
        <div class="desktopHeader">
            <div class="logo">
                <a href="/">ARTINFO</a>
            </div>
            <nav>
                <li><a href="/about">소개</a></li>
                <li><a href="/recruit_art/all">채용정보</a></li>
            </nav>
            <div id="login" class="login">
                <% if( login != null ) { %>
                    <% if( login === "admin" ) { %>
                        <div class="name"><%= login %>&nbsp</div>
                        <a href="/"><i class="fa-solid fa-house-user"></i></i></a>
                        <a class="logout" href="/logout">logout</a>
                    <% } else { %>
                        <div class="name"><%= login %></div>
                        <a href="/clientInfo"><i class="fa-solid fa-gear"></i></a>
                        <a href="/logout"><i class="fa-solid fa-arrow-right-from-bracket"></i></a>
                    <% } %>    
                <% } else { %>
                    <a class="loginText" href="/login">로그인</a>
                <% } %>
            </div>
        </div>    
    
        <div class="mobileHeader">     
            <% if( login != null ) { %>  
                <nav>
                    <i class="fa-solid fa-bars" onclick="clickMenu()"></i>
                </nav>
                <div class="logo">
                    <a href="/">ARTINFO</a>
                </div>
                <div class="login">
                    <a href="/clientInfo"><i class="fa-solid fa-gear"></i></a>
                </div>
            <% } else { %> 
                <nav>
                    <i class="fa-solid fa-bars" onclick="clickMenu()"></i>
                </nav>
                <div class="logo">
                    <a href="/">ARTINFO</a>
                </div>
                <div class="login"><a href="/login"><i class="fa-regular fa-user"></i></a></div>
            <% } %>            
        </div>
        <div id="mobileMenu" class="mobileMenu"> 
            <a href="/">Home</a>
            <a href="/about">소개</a>
            <a href="/recruit_art/all">채용정보</a>
            <% if( login != null ) { %>
                <div class="logout">
                    <a href="/logout">로그아웃</a>
                </div>
            <% } else { %>
                <div class="logout">
                    <a href="/login">로그인</a>
                </div>
            <% } %>
        </div> 
    </header>
    <section class="section" id="section">
        <div class="title">글쓰기</div>
        <article class="article">
            <form action="/recruit_religion/update" class="contentBack" method="post" onSubmit="return confirm('공고를 수정하시겠습니까?')">
                <input type="hidden" name="dbId" value=<%= data[0].ID %>>
                <div class="titleBack">
                    <p>제 목</p>
                    <input id="mainTitle" type="text" name="title" value="<%= data[0].TITLE %>">
                </div>
                <div class="contentDetail">
                    <div class="contentDetailLeft">
                        <div class="expertBack">
                            <p>분야</p>
                            <select class="expert" id="expert" name="expert">                                
                                <option>분야</option>      
                                    <% if (data[0].EXPERTTYPE === "지휘자" ) { %>
                                        <option value="지휘자" selected>지휘자</option>
                                    <% } else { %>
                                        <option value="지휘자" >지휘자</option>
                                    <% } %>       
                                    <% if (data[0].EXPERTTYPE === "소프라노" ) { %>
                                        <option value="소프라노" selected>소프라노</option>
                                    <% } else { %>
                                        <option value="소프라노" >소프라노</option>
                                    <% } %>     
                                    <% if (data[0].EXPERTTYPE === "알토" ) { %>
                                        <option value="알토" selected>알토</option>
                                    <% } else { %>
                                        <option value="알토" >알토</option>
                                    <% } %>  
                                    <% if (data[0].EXPERTTYPE === "테너" ) { %>
                                        <option value="테너" selected>테너</option>
                                    <% } else { %>
                                        <option value="테너" >테너</option>
                                    <% } %>  
                                    <% if (data[0].EXPERTTYPE === "베이스" ) { %>
                                        <option value="베이스" selected>베이스</option>
                                    <% } else { %>
                                        <option value="베이스" >베이스</option>
                                    <% } %>                    
                                    <% if (data[0].EXPERTTYPE === "반주자" ) { %>
                                        <option value="반주자" selected>반주자</option>
                                    <% } else { %>
                                        <option value="반주자" >반주자</option>
                                    <% } %>                         
                            </select>
                        </div>
                        <div class="typeBack">
                            <p>분류</p>
                            <select class="type" id="type" name="type">
                                <option>분류</option>
                                <% if (data[0].TYPE === "기독교" ) { %>
                                    <option value="기독교" selected>기독교</option>
                                <% } else { %>
                                    <option value="기독교" >기독교</option>
                                <% } %> 
                                <% if (data[0].TYPE === "천주교" ) { %>
                                    <option value="천주교" selected>천주교</option>
                                <% } else { %>
                                    <option value="천주교" >천주교</option>
                                <% } %> 
                                <% if (data[0].TYPE === "불교" ) { %>
                                    <option value="불교" selected>불교</option>
                                <% } else { %>
                                    <option value="불교" >불교</option>
                                <% } %> 
                                <% if (data[0].TYPE === "기타" ) { %>
                                    <option value="기타" selected>기타</option>
                                <% } else { %>
                                    <option value="기타" >기타</option>
                                <% } %>  
                            </select>
                        </div>
                        <div class="salary">
                            <div class="selectSalary">
                                <p>급여</p>
                                <select id="salaryType" name="salaryType">
                                    <option>선택</option>
                                    <% if (data[0].SALARY === "협의 후 결정" ) { %>
                                        <option value="협의 후 결정" selected>협의 후 결정</option>
                                        <option value="won" >직접 입력</option>
                                    <% } else { %>
                                        <option value="협의 후 결정" >협의 후 결정</option>
                                        <option value="won" selected>직접 입력</option>
                                    <% } %> 
                                </select>   
                            </div>
                            <div id="inputSalary" class="inputSalary">
                                <input type="text" id="direct" name="direct" onKeyup="inputNumberAutoComma(this);" value=<%= data[0].SALARY %>>  
                                <p>원</p>
                            </div>                                                                              
                        </div>
                    </div>
                    <div class="contentDetailRight">
                        <div class="contentDetailRightUp">
                            <div class="name">
                                <p>단체명</p>
                                <input id="companyName" type="text" name="name" value="<%= data[0].NAME %>">
                            </div>
                            <div class="phonenumber">
                                <p>연락처</p>
                                <input type="text" value=<%= data[0].PNUMBER %> maxlength="11" oninput="maxLengthCheck(this)" id="phonenumber" onfocus="this.placeholder = ''" onblur="this.placeholder = '숫자만 입력해주세요.'" name="phonenumber" onkeydown="javascript: return event.keyCode == 69 ? false : true" placeholder="숫자만 입력해주세요.">
                            </div>
                        </div>
                        <div class="contentDetailRightMiddle">
                            <p>주소</p>
                            <input id="address" type="text" name="address" value="<%= data[0].ADDRESS %>">
                        </div>
                        <div class="contentDetailRightBottom">
                            <p>이메일</p>
                            <input id="email" type="text" name="email" value="<%= data[0].EMAIL %>"">
                        </div>                     
                    </div>                    
                </div>                
                <div class="contentMain">
                    <p>내 용</p>
                    <textarea spellcheck="false"  id="textarea" name="contentMain"><%= content %></textarea>
                </div>
                <div class="saveBack">
                    <button id="save" disabled>저 장</button>
                </div>
            </form>
            <form action="/recruit_religion/all" class="cancelBack">
                <button>취 소</button>
            </form>
        </article>
    </section>
    
    <footer id="footer">   
        <div class="footerText">문의 : chorales@naver.com</div>       
    </footer>
    <div align="center">
        <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-8515708471646582"
        crossorigin="anonymous"></script>
        <!-- 구글 하단 광고 -->
        <ins class="adsbygoogle"
            style="display:block"
            data-ad-client="ca-pub-8515708471646582"
            data-ad-slot="1352329679"
            data-ad-format="auto"
            data-full-width-responsive="true"></ins>
        <script>
            (adsbygoogle = window.adsbygoogle || []).push({});
        </script>
    </div> 

    <script type="text/javascript" src="/js/recruit_religion_update.js"></script>
</body>
</html>